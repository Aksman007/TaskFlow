    "version": "0.2.0",
    "configurations": [{
        "name": "Launch TaskFlow.API",
        "type": "coreclr",
        "request": "launch",
        "preLaunchTask": "build",
        "program": "${workspaceFolder}/src/TaskFlow.API/bin/Debug/net10.0/TaskFlow.API.dll",
        "args": [],
        "cwd": "${workspaceFolder}/src/TaskFlow.API",
        "stopAtEntry": false,
        "serverReadyAction": {
            "action": "openExternally",
            "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
        },
        "env": {
            "ASPNETCORE_ENVIRONMENT": "Development"
        },
        "sourceFileMap": {
            "/Views": "${workspaceFolder}/src/TaskFlow.API/Views"
        }
    }]
}